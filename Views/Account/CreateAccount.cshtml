@model UserApp
@{
    Layout = null;
    ViewData["Title"] = "Create Account";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title id="Headtitle">@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.1.0-rc.0/css/select2.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link href="~/css/createaccount.css" rel="stylesheet" />
</head>
@*<body  style="background-image: url('image\asec.jpg'); border:solid; border-width:3px;">*@
<body id="body-bg">
    <br />
    @*<img src="~/image/asec.jpg" width="50%" height="100%" />*@
    <div class="container" >
        @if (ViewBag.register != null)
        {
            <div class="alert alert-warning alert-dismissible text-center show" role="alert">
                @ViewBag.register
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <div class="row">
            <div class="d-flex justify-content-center ">
                <form asp-action="Register" asp-controller="Account" method="post" enctype="multipart/form-data" autocomplete="off">
                    <div class="card CreateCard" style="width:50rem;">
                        <div class="d-flex justify-content-end p-3">
                            <a class="btn btn-primary btn-sm btn-closed" asp-controller="DetailDashboard" asp-action="Index">x</a>
                        </div>
                        <div class="d-flex justify-content-center ">
                            <div class="mx-auto">
                                <div class="form-outline mb-3">
                                    <label class="form-label">Username</label>
                                    <input asp-for="Username" type="text" name="Username" class="form-control"  placeholder="Username" />
                                    <span asp-validation-for="Username" class="alert-danger"></span>
                                </div>
                                <div class="form-outline mb-3">
                                    <label class="form-label">Email</label>
                                    <input asp-for="Email" type="email" name="Email" class="form-control" placeholder="Email" />
                                    <span asp-validation-for="Email" class="alert-danger"></span>
                                </div>
                                <div id="dropProjectname" class="form-outline mb-3">
                                    <label class="form-label">Select Project:</label>
                                    <div>
                                        @if (ViewBag.ProjectList != null)
                                        {
                                            <select asp-for="ProjId"
                                                    class="js-select2-multi form-select" id="projectSelect" multiple="multiple"
                                                    asp-items="@(new SelectList(@ViewBag.ProjectList,"Id", "ProjectName"))">
                                            </select>
                                        }
                                    </div>
                                </div>
                                <div class=" mb-3">
                                    <label class="form-label">Department</label>
                                    <select class="form-control" asp-for="Department">
                                        <option value="">--Select Department--</option>
                                        <option value="Cost">Cost Engineer </option>
                                        <option value="Office">Office Engineer</option>
                                        <option value="Manager">Project Manager</option>
                                        <option value="Mamplasan">Mamplasan Precast</option>
                                        <option value="Planning">Planning Department</option>
                                        <option value="Engineering">Engineering Department </option>
                                        <option value="Audit">Audit Department </option>
                                        <option value="LYE">LYE</option>
                                        <option value="MTYE">MTYE</option>
                                        <option value="Management">Management</option>
                                    </select>
                                    <span asp-validation-for="Department" class="alert-danger"></span>
                                </div>
                                <div class="row p-2">
                                    <div class="col col-6 form-outline">
                                        <div class="col"><label asp-for="Password" class="form-label">Password</label></div>
                                        <div class="col">
                                            <input id="passwordInput" class="form-control" asp-for="Password" type="password" placeholder="Password" />
                                            <span asp-validation-for="Password" class="alert-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col col-6 form-outline">
                                        <div class="col">
                                            <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                                        </div>
                                        <div class="col">
                                            <input id="passwordInput1" class="form-control" asp-for="ConfirmPassword" type="password" placeholder="Password" />
                                            <span asp-validation-for="ConfirmPassword" class="alert-danger"></span>
                                        </div>
                                    </div>

                                </div>
                                <div class="row mt-2 p-2 text-center">
                                    <div class="col-5 offset-1 ">
                                        <input type="checkbox" id="showPassword" name="showPassword" />
                                        <label>Show Password</label>
                                    </div>
                                </div>
                                <div class="d-grid gap-2 p-3" align="center">
                                    <button type="submit" class="btn btn-lg btn-primary" value="submit">Create Account</button>
                                </div>
                            </div>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.1.0-rc.0/js/select2.min.js"></script>

</body>
</html>

<script>
    $(document).ready(function () {
        var passwordInput1 = $("#passwordInput1");
        var passwordInput = $("#passwordInput");
        var showPasswordCheckbox = $("#showPassword");
        $('#projectSelect').select2({
            placeholder: 'Select Project',
            closeOnSelect: false
        });
        showPasswordCheckbox.on("click", function () {
            if (showPasswordCheckbox.prop("checked")) {
                passwordInput.attr("type", "text");
                passwordInput1.attr("type", "text");
            } else {
                passwordInput.attr("type", "password");
                passwordInput1.attr("type", "password");
            }
        });
    })
</script>


